* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: lato;
  line-height: 1.6;
  color: #84a4bf;
  background-color: #a7c6d9;
}

ul {
  list-style-type: none;
}
a {
  text-decoration: none;
  color: #84a4bf;
}
.card {
  background-color: #a7c6d9;
  color: #84a4bf;
  border-radius: 10px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
  padding: 20px;
  margin: 10px;
}

/* navbar */
.navbar {
  height: 40px;
  background-color: #123452;
}

.navbar--container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 15%;
  height: 100%;
}
.logo {
  font-size: 25px;
}

/* Main */
.main {
  margin: auto;
  max-width: 1400px;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.container--main {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 100px;
  justify-content: center;
  align-content: center;
  margin: auto;
}
.search {
  display: grid;
  grid-template-rows: 1fr 5fr;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.results {
  justify-content: center;
  align-items: center;
  text-align: center;
}
.map {
  width: 400px;
  height: 400px;
}
.results {
  display: grid;
  grid-template-rows: 1fr 1fr;
}
.results--week-item,
.result--hour-item {
  margin: 0 20px;
}
.results--week-item:hover {
  cursor: pointer;
}

.results--week--list,
.results--hour--list {
  display: flex;
}
.result--hour {
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 10px;
}
.results--week,
.results--hour {
  display: grid;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.spinner {
  margin: 10px auto;
  text-align: center;
}
.spinner h2 {
  animation: rotate 1s infinite linear;
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

